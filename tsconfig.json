{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",

    /* JavaScript support */
    "allowJs": true, // Added to include JS files in compilation output

    /* Strict-mode niceties */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Make CJS → ESM interop sane */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Speed up CI; pg’s types are safe */
    "skipLibCheck": true
  },
  "include": ["src"]
}
